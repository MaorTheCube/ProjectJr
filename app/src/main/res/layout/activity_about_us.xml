<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <!-- Top app bar with back arrow -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="#1B2A4A"
        android:title="About Asthma SOS"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_media_previous" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/about_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Asthma SOS"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#10172D"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/about_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asthma SOS helps people with asthma quickly alert their emergency contacts and lets a guardian keep an eye on them during an attack.\n\nYou can set your emergency contacts, share your unique ID with a guardian, and optionally use cough detection as an early warning signal."
                        android:textSize="14sp"
                        android:textColor="#6B7897"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/about_developer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Developed by: Maor"
                        android:textSize="14sp"
                        android:textColor="#10172D"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/about_kofi_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Support development:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#10172D"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/about_kofi_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://ko-fi.com/yourname"
                        android:textSize="14sp"
                        android:textColor="#4C6FFF"
                        android:autoLink="web"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/about_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0"
                        android:textSize="12sp"
                        android:textColor="#6B7897"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
