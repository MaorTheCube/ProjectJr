<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN SCREEN -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3F2FD">

        <!-- TOP APP BAR -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="#1976D2"
            android:title="Asthma SOS"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_menu_24" />

        <!-- CONTENT AREA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/center_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/emergency_button"
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:text="SOS"
                    android:background="@drawable/rounded_button_red"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/location_test_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Test location sharing"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF" />

                <Switch
                    android:id="@+id/switch_cough"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable cough detection"
                    android:layout_marginTop="24dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp" />
            </LinearLayout>

            <!-- SICK ID bottom-right -->
            <TextView
                android:id="@+id/sick_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: --"
                android:textColor="#555555"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- DRAWER MENU -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:background="#FFFFFF" />
</androidx.drawerlayout.widget.DrawerLayout>
